@using FoodDeliveryWebApp.ViewModels
@model OrderViewModel
@{
    ViewData["Title"] = "Confirmation Page";
    ViewData["PageType"] = "ConfirmationPage";
    // Layout = "~/Views/Shared/_Layout.cshtml";
    var khmerCulture = new System.Globalization.CultureInfo("km-KH");
}


<div class="container-xxl py-5">
    <div class="container">
    </div>
</div>

<div class="container-xxl py-5">
    <div class="container">
        <div class="card">
            <div class="card-body">
                <div class="container mb-5 mt-3">
                    <div class="row d-flex align-items-baseline">
                        <div class="col-xl-9">
                            <p style="color: #7e8d9f;font-size: 20px;">Invoice >> <strong>ID: @Model.OrderNo</strong></p>
                        </div>
                        <div class="col-xl-3 float-end">
                            <a class="btn btn-light text-capitalize border-0" data-mdb-ripple-color="dark" onclick="printSection()">
                                <i class="fas fa-print text-primary"></i> Print
                            </a>
                            <a class="btn btn-light text-capitalize" data-mdb-ripple-color="dark" onclick="exportSection()">
                                <i class="far fa-file-pdf text-danger"></i> Export
                            </a>
                        </div>
                        <hr>
                    </div>

                    <div id="printExportSection" >

                        <div class="container">
                            <div class="col-md-12">
                                <div class="text-center">
                                    <i class="fab fa-mdb fa-4x ms-0" style="color:#5d9fc5 ;"></i>
                                    <p class="pt-0">Foody@delivery.com</p>
                                </div>

                            </div>


                            <div class="row">
                                <div class="col-xl-8">
                                    <ul class="list-unstyled">
                                        <li class="text-muted">From: <span style="color:#5d9fc5 ;">foody@delivery.com</span></li>
                                        <li class="text-muted">To: <span style="color:#5d9fc5 ;">@Model.UserName</span></li>
                                        <li class="text-muted">Email: @Model.Email</li>
                                        <li class="text-muted">@Model.Address</li>
                                        <li class="text-muted"><i class="fas fa-phone"></i> @Model.Phone</li>
                                    </ul>
                                </div>
                                <div class="col-xl-4">
                                    <p class="text-muted">Invoice</p>
                                    <ul class="list-unstyled">
                                        <li class="text-muted">
                                            <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">ID: @Model.OrderNo</span>
                                        </li>
                                        <li class="text-muted">
                                            <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="fw-bold">Creation Date: </span>@Model.OrderAt.ToString("MMM dd, yyyy HH:mm tt")
                                        </li>
                                        <li class="text-muted">
                                            <i class="fas fa-circle" style="color:#84B0CA ;"></i> <span class="me-1 fw-bold">Status:</span><span class="badge bg-warning text-black fw-bold">
                                                @Model.Status
                                            </span>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="row my-2 mx-1 justify-content-center">
                                <table class="table table-striped table-borderless">
                                    <thead style="background-color:#84B0CA ;" class="text-white">
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Description</th>
                                            <th scope="col">Qty</th>
                                            <th scope="col">Unit Price</th>
                                            <th scope="col">Amount</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int rowNum = 1;
                                        }
                                        @foreach (var orderItem in Model.OrderItems)
                                        {
                                            <tr>
                                                <th scope="row">@rowNum</th>
                                                <td>@orderItem.ProductName</td>
                                                <td>@orderItem.Quantity</td>
                                                <td>@($"{orderItem.ProductPrice:C}")</td>
                                                <td>@($"{orderItem.Quantity * orderItem.ProductPrice:C}")</td>
                                            </tr>
                                            rowNum++;
                                        }
                                    </tbody>

                                </table>
                            </div>
                            <div class="row">
                                <div class="col-xl-6">
                                    <p class="ms-3">Add additional notes and payment information</p>

                                </div>
                                <div class="col-xl-6">
                                    <ul class="list-unstyled">
                                        <li class="text-muted ms-3"><span class="text-black me-4">SubTotal</span>
                                            @(string.Format(khmerCulture, "{0:C2}", Model.OrderItems.Sum(item => item.Quantity * item.ProductPrice * 4100))) /
                                            @(string.Format("{0:C2}", Model.OrderItems.Sum(item => item.Quantity * item.ProductPrice)))
                                        </li>

                                    </ul>
                                    <p class="text-black float-start">
                                        <span class="text-black me-3"> Total Amount</span><span style="font-size: 20px;">
                                            @(string.Format(khmerCulture, "{0:C2}", Model.OrderItems.Sum(item => item.Quantity * item.ProductPrice * 4100))) /
                                            @(string.Format("{0:C2}", Model.OrderItems.Sum(item => item.Quantity * item.ProductPrice)))
                                        </span>
                                    </p>
                                </div>
                            </div>
                            <hr>
                            <div class="row">
                                <div class="col-xl-10">
                                    <p>Thank you for your purchase</p>
                                </div>
                                @* <div class="col-xl-2">
                                <button type="button" class="btn btn-primary text-capitalize"
                                style="background-color:#60bdf3 ;">
                                Pay Now
                                </button>
                                </div> *@
                            </div>

                        </div>

                    </div>

                    
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <!-- Include jsPDF library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.4.0/jspdf.umd.min.js"></script>
    <script type="text/javascript">
        function printSection() {
            var originalContent = $('#printExportSection').html();

            // Hide elements not needed for printing
            $('#printExportSection .non-printable').hide();

            // Open a new window and print
            var printWindow = window.open('', '_blank');
            printWindow.document.write('<html><head><title>Print Section</title></head><body>');
            printWindow.document.write($('#printExportSection').html());
            printWindow.document.write('</body></html>');
            printWindow.document.close();
            printWindow.print();

            // Restore the original content
            $('#printExportSection').html(originalContent);
        }

        function exportSection() {
            var originalContent = $('#printExportSection').html();

            // Hide elements not needed for export
            $('#printExportSection .non-exportable').hide();

            // Add logic for exporting to PDF or any other format
            var doc = new jsPDF();
            doc.text('Exported Invoice', 10, 10);
            doc.save('invoice.pdf');
            alert('Export functionality will be implemented here.');

            // Restore the original content
            $('#printExportSection').html(originalContent);
        }

    </script>
}